    "version": "0.2.0",
    "configurations": [
        {
            "name": "workload policy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder:k8s-policy-controller}/main.go",
            "cwd": "${workspaceFolder:k8s-policy-controller}",
            "args": [
                "--zap-devel",
                "--zap-encoder=console",
                "--zap-log-level=debug",
                "--kind=gcpworkloadpolicyprofile"
            ]
        },
        {
            "name": "node policy",
